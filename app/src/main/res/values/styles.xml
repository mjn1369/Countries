<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Message -->
    <style name="messageText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="messageActionButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <!-- Country List Item -->
    <style name="TextCountryItemName">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="TextCountryItemAlpha2Code">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextCountryItemRegion">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Country Info -->
    <style name="TextCountryInfoName">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- BOTTOM SHEET -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/appear_up</item>
        <item name="android:windowExitAnimation">@anim/disappear_down</item>
    </style>
</resources>
