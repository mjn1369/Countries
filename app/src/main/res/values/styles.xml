<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Message -->
    <style name="messageText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="messageActionButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <!-- Main Activity -->
    <style name="searchEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Country List Item -->
    <style name="TextCountryItemName">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="TextCountryItemAlpha2Code">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextCountryItemRegion">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!-- Country Info -->
    <style name="TextCountryInfoName">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCountryInfoDetails">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="TextCountryInfoDots">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- BOTTOM SHEET -->
    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/appear_up</item>
        <item name="android:windowExitAnimation">@anim/disappear_down</item>
    </style>
</resources>
